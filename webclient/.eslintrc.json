{
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 8
  },
  "env": {
    "node": true,
    "jest": true,
    "mocha": true
  },
  "rules": {
    "import/no-extraneous-dependencies": 0,
    "max-len": [2, 120],
    "func-names": 0,
    "no-console": 0,
    "no-underscore-dangle": 0,
    "no-prototype-builtins": 0,
    "class-methods-use-this": 0,
    "global-require": 0,
    "no-param-reassign": ["error", { "props": false }],
    "no-unused-expressions": 0,
    "comma-dangle": 0,
    "function-paren-newline": 0,
    "padded-blocks": 0,
    "object-curly-newline": 0,
    "prefer-destructuring": 0,
    "prefer-promise-reject-errors": 0,
    "no-trailing-spaces": 0
  },
  "globals": {
    "make": false,
    "use": false,
    "NODE_ENV": false,
    "__DEV__": false,
    "__PROD__": false,
    "__STAGE__": false,
    "__TEST__": false,
    "__DEBUG__": false,
    "Headers": false
  }
}